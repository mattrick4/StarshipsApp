@model IEnumerable<StarshipsApp.Models.Starship>

@{
    ViewData["Title"] = "Starships";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Starships</h2>
    <a asp-action="Create" class="btn btn-primary">Create New Starship</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Model</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Class</th>
                <th scope="col">Crew</th>
                <th scope="col">Passengers</th>
                <th scope="col" class="text-nowrap">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var starship in Model)
        {
            <tr>
                <td>@starship.Name</td>
                <td>@starship.Model</td>
                <td>@starship.Manufacturer</td>
                <td>@starship.StarshipClass</td>
                <td>@starship.Crew</td>
                <td>@starship.Passengers</td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@starship.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Edit" asp-route-id="@starship.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@starship.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>